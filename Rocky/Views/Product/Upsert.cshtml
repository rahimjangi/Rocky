@model Product

@{
    var title = "Create Product";
}

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    @if (Model.Id != 0)
    {
        title = "Edit Product";
        <input asp-for="Id" hidden/>
    }

    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3"> @title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row pt-2">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Description" class="form-control" ></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row pt-2">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" class="form-control"/>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row pt-2">
                    <div class="col-4">
                        <label asp-for="Image"></label>
                    </div>
                    <div class="col-8">
                        <input type="file" name="files" id="uploadedBox" multiple class="form-control"/>
                    </div>
                </div>

                @*Category Id*@
                <div class="form-group row pt-2">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="CategoryId" asp-items="ViewBag.CategoryDropDown" class="form-control">
                            <option>Select Category</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>

                @*ApplicationType Id*@
                <div class="form-group row pt-2">
                    <div class="col-4">
                        <label asp-for="ApplicationTypeId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="ApplicationTypeId" asp-items="ViewBag.ApplicationTypeDropDown" class="form-control">
                            <option>Select Application Type</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row pt-2">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            @if (Model.Id!=0)
                            {
                                //Update
                                <input type="submit" class="btn btn-info w-100" value="Update" />
                            }
                            else
                            {
                                //Create
                                <input type="submit" onclick="return validateInput()" class="btn btn-info w-100" value="Create" />
                                
                            }
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }

}                            