@model IEnumerable<Product>

<div class="container">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Product List</h2>
            </div>
        <div class="col-6 flex text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-square pe-1"></i>Create new Product</a>
                
            </div>
        </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Application Type</th>
                    <th>Image</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="10%">@item.Name</td>
                        <td width="20%">@item.Description</td>
                        <td width="10%">@item.Price</td>
                        <td width="10%">@item.Category?.Name</td>
                        <td width="10%">@item.ApplicationType?.Name</td>
                        <td width="10%">@item.Image</td>
                        <td width="10%" class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-outline-danger me-2 "><i class="bi bi-trash pe-1"></i>Delete</a>
                                <a asp-action="Upsert" asp-route-Id="@item.Id" class="btn btn-outline-info "> <i class="bi bi-pencil-square pe-1"></i>Edit</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>There is no product to display</p>
    }
</div>

