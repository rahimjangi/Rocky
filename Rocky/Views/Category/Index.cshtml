@model IEnumerable<Category>

<div class="container">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Category List</h2>
            </div>
        <div class="col-6 flex text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square pe-1"></i>Create new Category</a>
                
            </div>
        </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Display</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="40%">@item.Name</td>
                        <td width="40%">@item.DisplayOrder</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-outline-danger me-2 "><i class="bi bi-trash pe-1"></i>Delete</a>
                                <a asp-controller="Category" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-outline-info "> <i class="bi bi-pencil-square pe-1"></i>Edit</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No category exists!</p>
    }
</div>

