@model IEnumerable<ApplicationType>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type List</h2>
        </div>
        <div class="col-6 flex text-end">
            <a  asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square pe-1"></i>Create new Application Type</a>

        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="30%">@item.Name</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-outline-danger me-2 "><i class="bi bi-trash pe-1"></i>Delete</a>
                                <a asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-outline-info "> <i class="bi bi-pencil-square pe-1"></i>Edit</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No category exists!</p>
    }
</div>